<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10sp">

    <ImageButton
        android:background="@drawable/map_toolbar_btn_bg"
        android:padding="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clear_all_btn_map_toolbar"
        android:src="@drawable/ic_delete_black_24dp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"/>
    <ImageButton
        android:background="@drawable/map_toolbar_btn_bg"
        android:padding="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/reposition_btn_map_toolbar"
        android:src="@drawable/ic_my_location_real_black_24dp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"/>
    <ImageButton
        android:background="@drawable/map_toolbar_btn_bg"
        android:padding="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/change_source_btn_map_toolbar"
        android:src="@drawable/ic_edit_location_black_24dp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"/>
    <ImageButton
        android:background="@drawable/map_toolbar_btn_bg"
        android:padding="13sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/save_screenshot"
        android:src="@drawable/ic_save_black_24dp"
        android:layout_marginRight="5sp"
        android:layout_marginBottom="5sp"/>




</LinearLayout>