<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/names_tv"
        android:layout_height="wrap_content"
        android:background="@drawable/border_total_distance"
        android:text="Names of the invalid places"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:fontFamily="serif"
        android:layout_alignParentTop="true"
        android:layout_margin="20dp"
        android:gravity="center" />

    <TextView
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:id="@+id/names_list_tv"
        android:layout_height="wrap_content"
        android:background="@drawable/border_total_distance"
        android:padding="10dp"
        android:textSize="15dp"
        android:fontFamily="serif"
        android:layout_below="@+id/names_tv"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:gravity="left" />
    <TextView
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:id="@+id/ignore"
        android:layout_height="wrap_content"
        android:background="@drawable/border_total_distance"
        android:padding="10dp"
        android:textSize="15dp"
        android:text="Ignore"
        android:fontFamily="serif"
        android:layout_below="@+id/names_list_tv"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center" />
    <TextView
        android:textColor="@color/black"
        android:layout_width="wrap_content"
        android:id="@+id/reenter"
        android:layout_height="wrap_content"
        android:background="@drawable/border_total_distance"
        android:padding="10dp"
        android:textSize="15dp"
        android:text="Re-Enter"
        android:fontFamily="serif"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/names_list_tv"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:layout_alignParentRight="true" />






</RelativeLayout>